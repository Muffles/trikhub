{
  "id": "passthrough-skill",
  "name": "Passthrough Test Skill",
  "description": "A test skill for passthrough mode",
  "version": "1.0.0",
  "actions": {
    "details": {
      "description": "Get article details",
      "responseMode": "passthrough",
      "inputSchema": {
        "type": "object",
        "properties": {
          "id": { "type": "string" }
        },
        "required": ["id"]
      },
      "userContentSchema": {
        "type": "object",
        "properties": {
          "contentType": { "type": "string" },
          "content": { "type": "string" }
        },
        "required": ["contentType", "content"]
      }
    }
  },
  "capabilities": {
    "tools": [],
    "canRequestClarification": false,
    "session": {
      "enabled": true,
      "maxDurationMs": 3600000,
      "maxHistoryLength": 50
    }
  },
  "limits": {
    "maxExecutionTimeMs": 30000,
    "maxLlmCalls": 5,
    "maxToolCalls": 10
  },
  "entry": {
    "module": "./graph.js",
    "export": "graph"
  }
}
