{
  "id": "template-skill",
  "name": "Template Test Skill",
  "description": "A test skill for template mode",
  "version": "1.0.0",
  "actions": {
    "search": {
      "description": "Search for items",
      "responseMode": "template",
      "inputSchema": {
        "type": "object",
        "properties": {
          "topic": { "type": "string" }
        }
      },
      "agentDataSchema": {
        "type": "object",
        "properties": {
          "count": { "type": "integer" },
          "template": { "type": "string", "enum": ["success", "empty"] }
        },
        "required": ["count", "template"]
      },
      "responseTemplates": {
        "success": { "text": "Found {{count}} results" },
        "empty": { "text": "No results found" }
      }
    },
    "badOutput": {
      "description": "Action that returns invalid output",
      "responseMode": "template",
      "inputSchema": { "type": "object" },
      "agentDataSchema": {
        "type": "object",
        "properties": {
          "count": { "type": "integer" }
        },
        "required": ["count"]
      },
      "responseTemplates": {
        "success": { "text": "Count: {{count}}" }
      }
    }
  },
  "capabilities": {
    "tools": [],
    "canRequestClarification": false
  },
  "limits": {
    "maxExecutionTimeMs": 30000,
    "maxLlmCalls": 5,
    "maxToolCalls": 10
  },
  "entry": {
    "module": "./graph.js",
    "export": "graph"
  }
}
