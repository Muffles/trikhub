{
  "id": "@demo/notes",
  "name": "Demo Notes",
  "description": "A demo trik for testing storage and configuration capabilities",
  "version": "1.0.0",
  "actions": {
    "add_note": {
      "description": "Add a new note to persistent storage",
      "inputSchema": {
        "type": "object",
        "properties": {
          "title": { "type": "string", "description": "Note title" },
          "content": { "type": "string", "description": "Note content" }
        },
        "required": ["title", "content"]
      },
      "responseMode": "template",
      "agentDataSchema": {
        "type": "object",
        "properties": {
          "template": { "type": "string", "enum": ["note_added"] },
          "noteId": { "type": "string", "format": "id" },
          "title": { "type": "string", "maxLength": 100 }
        },
        "required": ["template", "noteId", "title"]
      },
      "responseTemplates": {
        "note_added": { "text": "Added note \"{{title}}\" with ID {{noteId}}" }
      }
    },
    "list_notes": {
      "description": "List all stored notes",
      "inputSchema": { "type": "object", "properties": {} },
      "responseMode": "template",
      "agentDataSchema": {
        "type": "object",
        "properties": {
          "template": { "type": "string", "enum": ["notes_list", "no_notes"] },
          "count": { "type": "integer" },
          "noteIds": { "type": "array", "items": { "type": "string", "format": "id" } }
        },
        "required": ["template", "count"]
      },
      "responseTemplates": {
        "notes_list": { "text": "Found {{count}} note(s)" },
        "no_notes": { "text": "No notes found. Add some notes first!" }
      }
    },
    "get_note": {
      "description": "Get a specific note by ID or by searching for it by title",
      "inputSchema": {
        "type": "object",
        "properties": {
          "noteId": { "type": "string", "description": "The note ID to retrieve (optional if searching by title)" },
          "titleSearch": { "type": "string", "description": "Search for a note by title (partial match)" }
        }
      },
      "responseMode": "passthrough",
      "userContentSchema": {
        "type": "object",
        "properties": {
          "title": { "type": "string" },
          "content": { "type": "string" },
          "createdAt": { "type": "string" }
        }
      }
    },
    "delete_note": {
      "description": "Delete a note by ID or by searching for it by title",
      "inputSchema": {
        "type": "object",
        "properties": {
          "noteId": { "type": "string", "description": "The note ID to delete (optional if searching by title)" },
          "titleSearch": { "type": "string", "description": "Search for a note by title to delete (partial match)" }
        }
      },
      "responseMode": "template",
      "agentDataSchema": {
        "type": "object",
        "properties": {
          "template": { "type": "string", "enum": ["note_deleted", "note_not_found"] },
          "noteId": { "type": "string", "format": "id" },
          "title": { "type": "string", "maxLength": 100 }
        },
        "required": ["template"]
      },
      "responseTemplates": {
        "note_deleted": { "text": "Deleted note \"{{title}}\" ({{noteId}})" },
        "note_not_found": { "text": "Note not found" }
      }
    },
    "show_config": {
      "description": "Show current configuration status (demonstrates config access)",
      "inputSchema": { "type": "object", "properties": {} },
      "responseMode": "template",
      "agentDataSchema": {
        "type": "object",
        "properties": {
          "template": { "type": "string", "enum": ["config_status"] },
          "hasApiKey": { "type": "boolean" },
          "hasWebhook": { "type": "boolean" },
          "configuredKeys": { "type": "array", "items": { "type": "string" } }
        },
        "required": ["template", "hasApiKey", "hasWebhook", "configuredKeys"]
      },
      "responseTemplates": {
        "config_status": { "text": "Configuration: API_KEY={{hasApiKey}}, WEBHOOK_URL={{hasWebhook}}" }
      }
    }
  },
  "capabilities": {
    "tools": [],
    "canRequestClarification": false,
    "storage": {
      "enabled": true,
      "maxSizeBytes": 10485760,
      "persistent": true
    }
  },
  "config": {
    "required": [
      { "key": "API_KEY", "description": "Demo API key (any value works for testing)" }
    ],
    "optional": [
      { "key": "WEBHOOK_URL", "description": "Optional webhook URL for notifications", "default": "" }
    ]
  },
  "limits": {
    "maxExecutionTimeMs": 30000,
    "maxLlmCalls": 0,
    "maxToolCalls": 0
  },
  "entry": {
    "module": "dist/index.js",
    "export": "default"
  }
}
