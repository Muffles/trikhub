    "dev": "tsc --watch",
    "start": "node dist/cli.js",
    "clean": "rm -rf dist *.tsbuildinfo"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.2.1",
    "@trikhub/manifest": "workspace:*",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "conf": "^13.0.1",
    "ora": "^8.0.1",
    "semver": "^7.6.3",
    "tar": "^7.4.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "@types/semver": "^7.5.8",
    "@types/tar": "^6.1.13"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Muffles/trikhub.git",
    "directory": "packages/trik-cli"
  },
  "bugs": {
    "url": "https://github.com/Muffles/trikhub/issues"
  },
  "homepage": "https://github.com/Muffles/trikhub/tree/main/packages/trik-cli#readme",
  "publishConfig": {
